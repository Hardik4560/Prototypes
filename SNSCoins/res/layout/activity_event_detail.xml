<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lnrContentTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_weight="30"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/lnrDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_15dp" >

                <TextView
                    android:id="@+id/txtTitleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="Title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/gray_999999" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:text="One Ruppes Coin"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrContentBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_weight="70"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTimingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_bdbdbd"
                android:padding="@dimen/_5dp"
                android:paddingLeft="@dimen/_10dp"
                android:text="Timing"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_333333" />

            <LinearLayout
                android:id="@+id/txtTiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtStartLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="Start"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="@dimen/_5dp" />

                    <TextView
                        android:id="@+id/txtStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="@dimen/_5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtEndLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="End"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="@dimen/_5dp" />

                    <TextView
                        android:id="@+id/txtEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="@dimen/_5dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtVenueLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_bdbdbd"
                android:padding="@dimen/_5dp"
                android:paddingLeft="@dimen/_10dp"
                android:text="Venue"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_333333" />

            <TextView
                android:id="@+id/txtVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:text="The Expo Center World Trade Center cuffe parade Colaba Mumbai"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtDescriptionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_bdbdbd"
                android:padding="@dimen/_5dp"
                android:paddingLeft="@dimen/_10dp"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_333333" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:text="The Expo Center World Trade Center cuffe parade Colaba Mumbai"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>