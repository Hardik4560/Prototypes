<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreenActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCoins"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_coin"
            android:drawablePadding="-20dp"
            android:onClick="onCoinsClicked"
            android:paddingLeft="@dimen/_30dp"
            android:text="Coins" />

        <Button
            android:id="@+id/btnCurrency"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1"
            android:onClick="onCurrencyClicked"
            android:text="Currency" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnEvents"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1"
            android:onClick="onEventsClicked"
            android:text="Events" />

        <Button
            android:id="@+id/btnNews"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1"
            android:onClick="onNewsClicked"
            android:text="News" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBookmarks"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1"
            android:onClick="onBookmarksClicked"
            android:text="My Collections" />

        <Button
            android:id="@+id/btnValidation"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1"
            android:onClick="onValidationClicked"
            android:text="Validation" />
    </LinearLayout>

</LinearLayout>