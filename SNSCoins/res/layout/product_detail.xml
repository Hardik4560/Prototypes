<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20dp" >

    <LinearLayout
        android:id="@+id/rlt_content_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50" >

            <TextView
                android:id="@+id/txt_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_777777" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_title_label"
                android:layout_marginBottom="@dimen/_20dp"
                android:text="Coin"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txt_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_title"
                android:text="Category"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_777777" />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_category_label"
                android:text="Category"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lst_years"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_weight="50"
        android:cacheColorHint="@android:color/transparent"
        android:overScrollFooter="@color/blue_55c2ea"
        android:overScrollHeader="@color/blue_55c2ea" >
    </ListView>

</LinearLayout>